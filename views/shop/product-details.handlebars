<div class="centered">
    <h1>{{ this.title }}</h1>
    <hr>
    <div>
        <img src="{{this.imageUrl}}" alt="{{ this.title }}">
    </div>
    <h2>{{ this.price }}</h2>
    <p>{{this.description}}</p>
    <form action="/cart" method="POST">
        <button class="btn">Add to Cart</button>
        <input type="hidden" name="productId" value="{{ this.id }}"/>
    </form>
</div>