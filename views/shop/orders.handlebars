<div>
    {{#if hasOrders }}
        <ul>
            {{#each orders}}
            <li>
                <h1>Order# {{ this._id }}</h1>
                <ul>
                    {{#each this.products}}
                    <li>{{ this.product.title }} ({{ this.quantity}}) </li>
                    {{/each}}
                </ul>
                <h1>Total $ {{ this.total }}</h1>
            </li>
            {{/each}}
        </ul>
    {{else}}
        <h1>No Orders</h1>
    {{/if}}
</div>