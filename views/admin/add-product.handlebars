{{#if errorMessage}}
    <div class="user-message user-message--error">{{errorMessage}}</div>
{{/if}}
<form class="product-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
    <div class="form-control">
        <label for="title">Title</label>
        <input type="text"
            name="title"
            id="title"
            value="{{ oldInput.title }}"
            class="{{#if validationErrors.title }}invalid{{/if}}"
        >
    </div>
    <div class="form-control">
        <label for="image">Img Url</label>
        <input type="file"
            name="image"
            id="image"
        >
    </div>

    <div class="form-control">
        <label for="price">Price</label>
        <input type="number"
            name="price"
            id="price"
            step="0.01"
            value="{{ oldInput.price }}"
            class="{{#if validationErrors.price }}invalid{{/if}}" 
        >
    </div>

    <div class="form-control">
        <label for="description">Description</label>
        <textarea type="text"
            name="description"
            id="description"
            rows="5"
            class="{{#if validationErrors.description }}invalid{{/if}}">{{ oldInput.description }}</textarea>
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button type="submit" class="btn">Add Product</button>
</form>