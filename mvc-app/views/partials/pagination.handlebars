<section class="pagination">
    {{#if isNotFirst}}
        {{#if previousIsNotFirst}}
        <a href="?page=1">1</a>
        {{/if}}
    {{/if}}
    {{#if hasPreviousPage}}
        <a href="?page={{previousPage}}">{{previousPage}}</a>
    {{/if}}
    <a href="?page={{currentPage}}">{{currentPage}}</a>
    {{#if hasNextPage}}
        <a href="?page={{nextPage}}">{{nextPage}}</a>
    {{/if}}
    {{#if isNotLastPage}}
        {{#if nextIsNotLast}}
        <a href="?page={{lastPage}}">{{lastPage}}</a>
        {{/if}}
    {{/if}}
</section>
